<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#F7F1E6"> <!-- Background Color -->

    <!-- Left Column: Story Image -->
    <ImageView
        android:id="@+id/story_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"/>

    <!-- Right Column: Story Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/story_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#6B4226"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/story_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#6B4226"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/story_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/story_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:paddingTop="2dp"/>

        <!-- Bottom Row: Buttons (Edit & Delete side by side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/edit_story_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#6B4226"
                android:elevation="4dp"
                android:padding="8dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/delete_story_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#6B4226"
                android:elevation="4dp"
                android:padding="8dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
