<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FAF3E0"
    tools:context=".Register">

    <!-- Container với nền trắng bo góc -->
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="680dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="12dp"
        android:padding="24dp"
        android:layout_margin="20dp"
        android:gravity="center">

        <!-- Tiêu đề Đăng Ký -->
        <TextView
            android:id="@+id/Tw_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_gravity="center"/>

        <!-- Email -->
        <EditText
            android:id="@+id/Edt_Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#F5F5F5"
            android:hint="Email"

            android:padding="12dp"
            android:textColor="#5D4037" />

        <!-- Tên đăng nhập -->
        <EditText
            android:id="@+id/Edt_Username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tên đăng nhập"

            android:textColor="#5D4037"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginTop="20dp"/>

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/Edt_Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mật khẩu"

            android:textColor="#5D4037"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"/>

        <!-- Xác nhận mật khẩu -->
        <EditText
            android:id="@+id/Edt_RePassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Xác nhận mật khẩu"

            android:textColor="#5D4037"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/Edt_DOB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ngày sinh"
            android:textColor="#5D4037"

            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:focusable="false"
            android:clickable="true"/>

        <!-- Giới tính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Tw_Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="16sp"
                android:textColor="#5D4037"
                android:layout_marginEnd="20dp"/>

            <RadioGroup
                android:id="@+id/GroupGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Btn_Nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textColor="#5D4037"/>

                <RadioButton
                    android:id="@+id/Btn_Nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:textColor="#5D4037"
                    android:layout_marginStart="20dp"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Nút Đăng ký -->
        <Button
            android:id="@+id/Btn_Register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Đăng ký"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8D6E63"
            android:layout_marginTop="30dp"/>

        <!-- Đã có tài khoản -->
        <TextView
            android:id="@+id/Tw_HaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản? Đăng nhập"
            android:textSize="14sp"
            android:textColor="#795548"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>