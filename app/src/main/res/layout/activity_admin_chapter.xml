<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Row 1: Title & Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_back_admin_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/chapter_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Manage Chapters"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Row 2: Write & Upload Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_write_chapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Write Chapter"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_upload_chapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload Chapter"
            android:padding="8dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Row 3: RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chapter_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>
</LinearLayout>
