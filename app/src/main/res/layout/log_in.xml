<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F1E6"
    tools:context=".LogIn">

    <!-- Container with rounded background -->
    <RelativeLayout
        android:id="@+id/Container"
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="#FFF7E6"
        android:elevation="12dp"
        android:padding="24dp"
        android:layout_margin="20dp"
        android:clipToOutline="true">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/Tw_Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#6B4226"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <!-- Username Input -->
        <EditText
            android:id="@+id/Edt_Username"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="Tên tài khoản"
            android:textColor="#4E342E"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_below="@id/Tw_Welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/Edt_Password"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Mật khẩu"
            android:textColor="#4E342E"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_below="@id/Edt_Username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <!-- Login Button -->
        <Button
            android:id="@+id/Btn_Login"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:text="Đăng nhập"
            android:textSize="16sp"
            android:textColor="#FFF7E6"
            android:backgroundTint="#6B4226"
            android:layout_below="@id/Edt_Password"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/Btn_Register"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:text="Đăng ký"
            android:textSize="16sp"
            android:textColor="#FFF7E6"
            android:backgroundTint="#8D5A2B"
            android:layout_below="@id/Edt_Password"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"/>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/Tw_Forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textSize="14sp"
            android:textColor="#B85042"
            android:layout_below="@id/Btn_Login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</RelativeLayout>
