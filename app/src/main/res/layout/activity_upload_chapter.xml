<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F1E6"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title and Return Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#6B4226"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="← Quay lại"
            android:textAllCaps="false"
            android:textColor="#FFF7E6" />

        <TextView
            android:id="@+id/title_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Tải lên Chương"
            android:textColor="#6B4226"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Chapter Name Input -->
    <EditText
        android:id="@+id/chapter_name_input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:hint="Nhập tên chương"
        android:padding="10dp"
        android:textColor="#4E342E"
        android:textColorHint="#A67C52" />

    <!-- Select File Button -->
    <Button
        android:id="@+id/btn_select_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#8D5A2B"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Chọn tệp"
        android:textAllCaps="false"
        android:textColor="#FFF7E6" />

    <!-- Save File Button -->
    <Button
        android:id="@+id/btn_save_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#B85042"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Lưu dưới dạng DOCX"
        android:textAllCaps="false"
        android:textColor="#FFF7E6" />
</LinearLayout>
